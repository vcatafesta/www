{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["dom", "es6"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "test", "dist"],
  "compileOnSave": false,
  "buildOnSave": false
}
